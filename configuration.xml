<root>
    <node name="test"
          groups="tests"
          template="template_test">

        <property name="check"><![CDATA[ps aux | grep {{ process_pattern }}]]></property>
        <property name="process_pattern"><![CDATA[my_process]]></property>
        <property name="start"><![CDATA[start ${HOME}]]></property>
    </node>



    <template name="template_test">
        <trigger name="start">
            <BlkCmd>
                <Cmd level="1">
                    <stdin><![CDATA[echo ${HOME}]]></stdin>
                    <on_success>
                        <BlkCmd>
                            <Msg level="1">
                                <stdin><![CDATA[Already started]]></stdin>
                            </Msg>
                        </BlkCmd>
                    </on_success>
                    <on_failure>
                        <BlkCmd>
                            <Cmd level="1">
                                <stdin><![CDATA[echo "start1"]]></stdin>
                                <always>
                                    <BlkCmd maxtime="5" sleep="2" retry_end_on_rc="1">
                                        <Cmd level="1">
                                            <stdin><![CDATA[echo "check1"]]></stdin>
                                        </Cmd>
                                    </BlkCmd>
                                </always>
                            </Cmd>
                        </BlkCmd>
                    </on_failure>
                </Cmd>
            </BlkCmd>
        </trigger>
        <trigger name="stop" level="1">
            <BlkCmd>
                <Cmd level="1">
                    <stdin><![CDATA[echo "stop1"]]></stdin>
                </Cmd>
            </BlkCmd>
        </trigger>
    </template>
</root>